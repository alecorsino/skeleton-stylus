/* Skeleton grid system
–––––––––––––––––––––––––––––––––––––––––––––––––– */
.container
  position: relative
  width: 100%
  max-width: 960px
  margin: 0 auto
  padding: 0 20px
  box-sizing: border-box

.column,
.columns
  width: 100%
  float: left
  box-sizing: border-box

@media (min-width: $mobile)
  .container
    width: 85%;
    padding: 0;

@media (min-width: $tablet)
  .container
    width: 80%
  .column,
  .columns
    margin-left: ($gutter)%
  .column:first-child,
  .columns:first-child
    margin-left: 0

  .one.column,
  .one.columns
    width: (column-size(1))%
  .two.columns
    width: (column-size(2))%
  .three.columns
    width: (column-size(3))%
  .four.columns
    width: (column-size(4))%
  .five.columns
    width: (column-size(5))%
  .six.columns
    width: (column-size(6))%
  .seven.columns
    width: (column-size(7))%
  .eight.columns
    width: (column-size(8))%
  .nine.columns
    width: (column-size(9))%
  .ten.columns
    width: (column-size(10))%
  .eleven.columns
    width: (column-size(11))%
  .twelve.columns
    width: 100%
    margin-left: 0
  .one-third.column
    width: (column-size(4))%
  .two-thirds.column
    width: (column-size(8))%
  .one-half.column
    width: (column-size(6))%


  /* Offsets */
  .offset-by-one.column,
  .offset-by-one.columns
    margin-left: (column-offset(1))%
  .offset-by-two.column,
  .offset-by-two.columns
    margin-left: (column-offset(2))%
  .offset-by-three.column,
  .offset-by-three.columns
    margin-left: (column-offset(3))%
  .offset-by-four.column,
  .offset-by-four.columns
    margin-left: (column-offset(4))%
  .offset-by-five.column,
  .offset-by-five.columns
    margin-left: (column-offset(5))%
  .offset-by-six.column,
  .offset-by-six.columns
    margin-left: (column-offset(6))%
  .offset-by-seven.column,
  .offset-by-seven.columns
    margin-left: (column-offset(7))%
  .offset-by-eight.column,
  .offset-by-eight.columns
    margin-left: (column-offset(8))%
  .offset-by-nine.column,
  .offset-by-nine.columns
    margin-left: (column-offset(9))%
  .offset-by-ten.column,
  .offset-by-ten.columns
    margin-left: (column-offset(10))%
  .offset-by-eleven.column,
  .offset-by-eleven.columns
    margin-left: (column-offset(11))%

  .offset-by-one-third.column,
  .offset-by-one-third.columns
    margin-left: (column-offset(4))%
  .offset-by-two-thirds.column,
  .offset-by-two-thirds.columns
    margin-left: (column-offset(8))%

  .offset-by-one-half.column,
  .offset-by-one-half.columns
    margin-left: (column-offset(6))%
